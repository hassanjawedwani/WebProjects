<% layout("./layout/boilerplate") -%>
<div class="container row ">
  <div class="col-lg-8">
    <h1 class="my-3">Create a new Listing</h1>
    <form method="post" action="http://localhost:8080/listings" class="create-list-form needs-validation" novalidate>
      <div>
        <label class="form-label" for="title">
          Title
        </label>
          <input
            type="text"
            name="title"
            class="form-control"
            id="title"
            placeholder="Add a catchy title"
            required
          />
          <div class="valid-feedback">good</div>
          <div class="invalid-feedback">Please enter a eye catching title</div>
        
      </div>
      <div>
        <label class="form-label" for="description">
          Description </label>
          <textarea
            name="description"
            class="form-control"
            id="description"
            required
          ></textarea>
          <div class="valid-feedback">good</div>
          <div class="invalid-feedback">Please enter a description that describes your listing</div>
      </div>

      <div>
        <label class="form-label" for="imageUrl">
          Image Link
        </label>
          <input
            type="url"
            name="imageUrl"
            placeholder="Enter image Url/Link"
            class="form-control"
            id="imageUrl"
          />
      </div>

      <div>
        <label class="form-label" for="price">
          Price</label>
          <input
            type="number"
            name="price"
            placeholder="Enter price "
            class="form-control"
            id="price"
            required
          />
          <div class="valid-feedback">good</div>
          <div class="invalid-feedback">Please enter price for your listing</div>
      </div>

      <div>
        <label class="form-label" for="location">
          Location</label>
          <input
            type="text"
            name="location"
            placeholder="Enter location"
            class="form-control"
            id="location"
            required
          />
          <div class="valid-feedback">good</div>
          <div class="invalid-feedback">Please enter location address</div>
      </div>

      <div>
        <label class="form-label" for="country">
          Country </label>
          <input
            type="text"
            name="country"
            placeholder="Enter country"
            class="form-control"
            id="country"
            required
          />
          <div class="valid-feedback">good</div>
          <div class="invalid-feedback">Please enter country name</div>
      </div>
      <button type="submit" class="btn custom-btn my-3">Create new list</button>
    </form>
  </div>
</div>
